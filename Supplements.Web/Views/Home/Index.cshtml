@model IEnumerable<Supplements.Model.SupplementType>

@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript">
    $(function () {
        $('#container').highcharts({
            chart: {
                type: 'bar'
            },
            title: {
                text: 'Fruit Consumption'
            },
            xAxis: {
                categories: ['Apples', 'Bananas', 'Oranges']
            },
            yAxis: {
                title: {
                    text: 'Fruit eaten'
                }
            },
            series: [{
                name: 'Jane',
                data: [1, 0, 4]
            }, {
                name: 'John',
                data: [5, 7, 3]
            }]
        });
    });
</script>

<table class="table table-striped">
    <tr>
        <th></th><th></th><th>Name</th><th>Distributer</th><th>Third Party Testing?</th>
    </tr>
    @foreach (var supp in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("View Reports", "ViewReports", new {  id = supp.Id }, new { @class = "btn btn-info" })
            </td>
            <td>
                @Html.ActionLink("Add Dose", "AddDoses", new { id = supp.Id }, new { @class = "btn btn-info" })
            </td>
            <td>
                @supp.Name 
            </td>
            <td>
                @supp.Distributer 
            </td>
            <td>
                @if (supp.IsThirdPartyTesting == true)
                {
                    <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </td>
        </tr>
    }
</table>

<div id="container" style="width:100%; height:400px;"></div>